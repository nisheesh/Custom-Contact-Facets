@inherits WebViewPage<Contact>
@{ Html.EnableClientValidation(); }
<div class="row col-lg-4">
    <h1>Register</h1>
    @using (Ajax.BeginForm("Submit", "Contact", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "window.demo.forms.RegisterSuccess('ContactForm', data, status, xhr)" }, new { id = "ContactForm" }))
    {
        <div class="form-group">
            <label for="EmailAddress">Email Address:</label>
            @Html.TextBoxFor(x => x.EmailAddress, new { type = "email", @class="form-control" })
            @Html.ValidationMessageFor(x => x.EmailAddress)
        </div>
        <div class="form-group">
            <label for="FirstName">First Name:</label>
            @Html.TextBoxFor(x => x.FirstName, new { type = "text", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <div class="form-group">
            
            <label for="LastName">Last Name:</label>
            @Html.TextBoxFor(x => x.LastName, new { type = "text", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <div class="form-group">
            <label for="Phone">Phone:</label>
            @Html.TextBoxFor(x => x.Phone, new { type = "tel", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Phone)
        </div>
        <div class="form-group" style="border:1px dotted">
            <label for="OptIn">Opt For Premium Content:</label>
            @Html.CheckBoxFor(x => x.OptIn) <br/>
            <small>[Already paid the subscription fees]</small>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    }
</div>